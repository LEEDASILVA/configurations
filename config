# binding mode <https://i3wm.org/docs/userguide.html#configuring>
# shutdown / restart / suspend...
set $mode_system System [l]ock, [s]uspend, [h]ibernate, [r]eboot, [p]oweroff

mode "$mode_system" {
    # to lock the screen with a img
    bindsym l exec i3lock -t -i /home/lee/Pictures/numbat_wallpaper_dark.jpg, mode "default"
    # bindsym l exec --no-startup-id $i3lockwall, mode "default"
    # bindsym l exec --no-startup-id ~/.config/i3/matrixLock.sh, mode "default"
    bindsym s exec systemctl suspend, mode "default"
    bindsym h exec systemctl hibernate, mode "default"
    bindsym r exec systemctl reboot, mode "default"
    bindsym p exec systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Control+SHIFT+a mode "$mode_system"
